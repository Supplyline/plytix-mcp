{
  "name": "plytix-mcp-server",
  "version": "0.2.0",
  "type": "module",
  "description": "MCP server for Plytix PIM API integration. Enables AI assistants to read, write, and manage product data, assets, categories, and relationships.",
  "keywords": [
    "mcp",
    "plytix",
    "pim",
    "product-information-management",
    "ai",
    "claude",
    "model-context-protocol",
    "cloudflare-workers"
  ],
  "homepage": "https://github.com/Supplyline/plytix-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/Supplyline/plytix-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Supplyline/plytix-mcp/issues"
  },
  "author": "Supplyline",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "plytix-mcp": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:worker": "wrangler dev",
    "build": "tsc",
    "build:worker": "tsc --project tsconfig.worker.json",
    "start": "node dist/index.js",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "typecheck:worker": "tsc --noEmit --project tsconfig.worker.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "node test-integration.js",
    "test:mcp": "node test-mcp-client.js",
    "test:worker": "node test-worker.js",
    "test:all": "npm run build && npm run test && npm run test:integration && npm run test:mcp"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.17",
    "wrangler": "^4.59.2"
  }
}
